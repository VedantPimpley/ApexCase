{
  "name": "Capitalizer",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["contextMenus","activeTab", "tabs"],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}